#bash /home/alp/skipad.sh

XF86AudioRaiseVolume
 set_volume increase
XF86AudioLowerVolume
 set_volume decrease
XF86AudioMute
 set_volume toggle

XF86AudioMicMute
 pactl set-source-mute `pactl list sources | grep -A2 '^Source' | grep -B2 USB | head -n1 | cut -f2 -d'#'` toggle

XF86AudioPause
 echo A_OFF > /r/sdfbtfifo
XF86AudioPlay
 echo A_ON > /r/sdfbtfifo

XF86MonBrightnessUp
 echo 851 > /sys/class/backlight/intel_backlight/brightness
XF86MonBrightnessDown
 echo 101 > /sys/class/backlight/intel_backlight/brightness
